{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "automation",
    "dependencies"
  ],
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "nix"
      ],
      "groupName": "Nix",
      "extends": [
        "shedules:earlyMondays",
        "schedule:automergeDaily"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "Actions",
      "extends": [
        "schedule:automergeDaily"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "@tanstack/*",
        "typescript"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["patch", "pin", "digest", "minor"],
      "groupName": "Patches",
      "extends": [
        "schedule:automergeDaily",
        "schedule:weekly"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "groupName": "Maintenance",
      "extends": [
        "schedule:automergeDaily",
        "schedule:monthly"
      ],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "github-actions": {
    "enabled": true
  },
  "nix": {
    "enabled": true
  }
}
