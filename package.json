{
  "name": "personal-blog",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "sideEffects": false,
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "NITRO_PRESET=deno_deploy vite build && rm -rf dist/data && cp -r data dist/",
    "start": "cd dist && deno serve --allow-all server/server.js",
    "deploy": "cd dist && deno run --allow-all jsr:@deno/deployctl deploy --project=tanstack-blog server/server.ts",
    "typecheck": "tsc --noEmit",
    "dev-ladle": "pnpm ladle dev --viteConfig vite.config.ladle.ts",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-staged": "lint-staged",
    "test-e2e": "pnpm exec playwright test",
    "test-e2e:chromium": "pnpm exec playwright test --project=chromium",
    "test-e2e-report": "pnpm exec playwright show-report",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@clerk/tanstack-react-start": "^0.27.12",
    "@tanstack/react-router": "^1.144.0",
    "@tanstack/react-router-devtools": "^1.144.0",
    "@tanstack/react-start": "^1.145.3",
    "browserslist": "^4.28.1",
    "effect": "^3.19.14",
    "expressive-code": "^0.41.5",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "html-rewriter-wasm": "^0.4.1",
    "lightningcss": "^1.30.2",
    "react": "19.2.3",
    "react-aria-components": "^1.14.0",
    "react-dom": "19.2.3",
    "react-lite-youtube-embed": "^3.3.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-expressive-code": "^0.41.5",
    "remark-captions": "^2.2.4",
    "remark-custom-header-id": "^1.0.0",
    "xmlbuilder2": "^4.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@deno/vite-plugin": "^1.0.6",
    "@effect/language-service": "^0.63.2",
    "@effect/platform": "^0.94.1",
    "@effect/platform-node": "^0.104.0",
    "@effect/sql": "^0.49.0",
    "@effect/sql-sqlite-node": "^0.50.0",
    "@eslint-react/eslint-plugin": "^2.5.0",
    "@expressive-code/plugin-collapsible-sections": "^0.41.5",
    "@ladle/react": "^5.1.1",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@tanstack/eslint-plugin-router": "^1.141.0",
    "@tanstack/nitro-v2-vite-plugin": "^1.141.0",
    "@types/node": "^25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/xml": "^1.0.11",
    "@vitejs/plugin-react": "^5.1.2",
    "better-sqlite3": "12.4.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "fast-xml-parser": "^5.3.3",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-to-string": "^3.0.1",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "pnpm": "^10.27.0",
    "reading-time": "^1.5.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "overrides": {
      "@oozcitak/url": "2.0.1",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "better-sqlite3": "12.4.1",
      "react": "19.2.3",
      "react-dom": "19.2.3"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,yaml}": [
      "eslint --fix"
    ]
  }
}
