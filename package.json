{
  "name": "personal-blog",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "sideEffects": false,
  "scripts": {
    "dev": "vinxi dev",
    "build": "NITRO_PRESET=deno_deploy vinxi build && rm -rf .output/data && cp -r data .output/",
    "start": "cd .output && deno run --allow-all server/index.ts",
    "deploy": "cd .output && deno run jsr:@deno/deployctl deploy --project=tanstack-blog server/index.ts",
    "typecheck": "tsc --noEmit",
    "serve-laddle": "pnpm ladle serve",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-staged": "lint-staged",
    "test-e2e": "pnpm exec playwright test",
    "test-e2e:chromium": "pnpm exec playwright test --project=chromium",
    "test-e2e-report": "pnpm exec playwright show-report",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@clerk/tanstack-react-start": "^0.14.1",
    "@tanstack/react-router": "^1.119.0",
    "@tanstack/react-router-devtools": "^1.119.1",
    "@tanstack/react-start": "^1.119.0",
    "browserslist": "^4.24.4",
    "effect": "^3.14.16",
    "lightningcss": "^1.29.3",
    "react": "^19.1.0",
    "react-aria-components": "^1.8.0",
    "react-dom": "^19.1.0",
    "vinxi": "0.5.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@effect/language-service": "^0.9.1",
    "@effect/platform": "^0.80.16",
    "@effect/platform-node": "^0.77.4",
    "@eslint-react/eslint-plugin": "^1.48.5",
    "@ladle/react": "^5.0.3",
    "@playwright/test": "^1.52.0",
    "@tanstack/eslint-plugin-router": "^1.115.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gray-matter": "^4.0.3",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "lefthook": "^1.11.12",
    "lint-staged": "^16.0.0",
    "playwright": "^1.52.0",
    "pnpm": "^10.10.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit",
      "eslint --fix"
    ],
    "*.{js,jsx,yaml}": [
      "eslint --fix"
    ]
  }
}
