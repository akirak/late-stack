{
  "name": "personal-blog",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "sideEffects": false,
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "NITRO_PRESET=deno_deploy vite build && rm -rf .output/data && cp -r data .output/",
    "start": "cd .output && deno run --allow-all server/index.ts",
    "deploy": "cd .output && deno run --allow-all jsr:@deno/deployctl deploy --project=tanstack-blog server/index.ts",
    "typecheck": "tsc --noEmit",
    "serve-laddle": "pnpm ladle serve",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-staged": "lint-staged",
    "test-e2e": "pnpm exec playwright test",
    "test-e2e:chromium": "pnpm exec playwright test --project=chromium",
    "test-e2e-report": "pnpm exec playwright show-report",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@clerk/tanstack-react-start": "^0.16.0",
    "@tanstack/react-router": "^1.121.2",
    "@tanstack/react-router-devtools": "^1.121.5",
    "@tanstack/react-start": "^1.121.4",
    "browserslist": "^4.25.0",
    "effect": "^3.16.5",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "lightningcss": "^1.30.1",
    "react": "^19.1.0",
    "react-aria-components": "^1.10.1",
    "react-dom": "^19.1.0",
    "rehype-expressive-code": "^0.41.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@effect/language-service": "^0.19.0",
    "@effect/platform": "^0.84.9",
    "@effect/platform-node": "^0.85.14",
    "@eslint-react/eslint-plugin": "^1.52.1",
    "@expressive-code/plugin-collapsible-sections": "^0.41.2",
    "@ladle/react": "^5.0.3",
    "@playwright/test": "^1.53.0",
    "@tanstack/eslint-plugin-router": "^1.120.17",
    "@types/node": "^22.15.31",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gray-matter": "^4.0.3",
    "lefthook": "^1.11.13",
    "lint-staged": "^16.1.0",
    "playwright": "^1.53.0",
    "pnpm": "^10.12.1",
    "rehype-sanitize": "^6.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,yaml}": [
      "eslint --fix"
    ]
  }
}
